{
  "name": "botify-sdk-middlewares",
  "version": "0.1.0",
  "description": "Botify JS SDK middlewares",
  "author": "Botify <labs@botify.com>",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib dist",
    "lint": "eslint .",
    "test": "mocha --compilers js:babel/register --recursive",
    "test:watch": "npm test -- --watch",
    "check": "npm run lint && npm run test",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack --config webpack.config.production.js",
    "build": "npm run clean && npm run build:lib && npm run build:umd",
    "postinstall": "npm run build",
    "stats": "webpack --config webpack.config.stats.js && npm run clean",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/botify-hq/botify-sdk-jsplus.git"
  },
  "dependencies": {
  },
  "devDependencies": {
    "babel": "^5.0.8",
    "babel-core": "^5.0.8",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.0.0",
    "chai": "^3.0.0",
    "eslint": "^1.4.1",
    "eslint-config-airbnb": "^0.1.0",
    "expect": "^1.6.0",
    "mocha": "^2.2.5",
    "mock-local-storage": "^1.0.2",
    "rimraf": "^2.4.3",
    "sinon": "^1.17.1",
    "stats-webpack-plugin": "^0.2.2",
    "webpack": "^1.9.5",
    "yargs": "^3.5.3"
  }
}
